<UserControl x:Class="myFirstProject.SliderControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:myFirstProject" d:DataContext="{d:DesignInstance Type=local:VMslider}"
             mc:Ignorable="d" Height="41.487" Width="696.573">
    <Canvas Width="50" HorizontalAlignment="Left" >

        <StackPanel x:Name="stack" Grid.Row="2" Grid.Column="2" Orientation="Horizontal" Canvas.Left="10" Height="40">

            <Button Content="⏪" Height="30" Width="30" FontSize="20" Background="#FFC32A2A" Click="goBack_Click"/>

            <Button x:Name ="playButton" Content="▶️" Height="30" Width="30" FontSize="20" Background="#FFC32A2A" Click="play"/>

            <Button x:Name="pauseButton" Content="⏸" Height="30" Width="30" FontSize="20" Background="#FFC32A2A" Click="pause"/>

            <Button Content="⏩" Height="30" Width="30" FontSize="20" Background="#FFC32A2A" Click="goHead"/>

            <DockPanel VerticalAlignment="Center" Margin="10">
               
                <Slider x:Name="slider" Grid.ColumnSpan="2" Value="{Binding VM_IndexRow}" Maximum="{Binding VM_NumRows}" Minimum="0" TickPlacement="BottomRight" TickFrequency="10" Height="30" Width="420" Background="#FFC32A2A" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
            </DockPanel>

            <Menu DockPanel.Dock="Bottom"  Height="30" Width="auto" Background="#FFC32A2A" FontSize="18" FontWeight="Bold" FontFamily="Aharoni">

                <MenuItem x:Name="speed" Header="speed" Height="30" Width="70">

                    <MenuItem Header="0.5" Click="Speed_Click_05" />

                    <MenuItem Header="0.75" Click="Speed_Click_075" />

                    <MenuItem Header="1" Click="Speed_Click_1"/>

                    <MenuItem Header="1.25" Click="Speed_Click_125"/>

                    <MenuItem Header="1.5" Click="Speed_Click_15"/>

                    <MenuItem Header="1.75" Click="Speed_Click_175"/>

                    <MenuItem Header="2" Click="Speed_Click_2" Margin="0,0,0.2,0"/>

                    <MenuItem Header="2.25" Click="Speed_Click_225"/>

                    <MenuItem Header="2.5" Click="Speed_Click_25"/>

                </MenuItem>

            </Menu>

            <TextBlock x:Name="Mspeed" Text="1" TextWrapping="Wrap"  Height="30" Width="40" DockPanel.Dock="Bottom"  Background="#FFC32A2A" FontWeight="Bold" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center"/>
            <TextBlock x:Name="Time" Text="{Binding VM_Time,Mode=OneWay}" TextWrapping="Wrap"  Height="30" Width="106" DockPanel.Dock="Bottom"  Background="#FFC32A2A" FontWeight="Bold" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center" Margin="0,5"/>


        </StackPanel>

    </Canvas>
</UserControl>
