<UserControl x:Class="WpfControlLibraryTest.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:oxy="http://oxyplot.org/wpf"
             xmlns:local="clr-namespace:WpfControlLibraryTest"
             xmlns:Joystick ="clr-namespace:WpfControlLibraryTest"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <!--<Grid>-->
    <Canvas Background="Transparent">

        <oxy:Plot x:Name="plot"  Background="#66FFE7CB" Height="230" Width="250" Canvas.Left="-2">
            <oxy:Plot.Series>
                <oxy:LineSeries Color="Black" ItemsSource="{Binding VM_Reg_line, Mode=OneWay}"/>
                <oxy:LineSeries Color="Transparent" ItemsSource="{Binding VM_Points, Mode=OneWay}" MarkerSize="1" MarkerType="Circle" MarkerFill="Blue" />
                <oxy:LineSeries Color= "Transparent" ItemsSource="{Binding VM_Corrent_points ,Mode=OneWay}" MarkerSize="1.5" MarkerType="Circle" MarkerFill="Black"/>
                <oxy:LineSeries Color= "Transparent" ItemsSource="{Binding VM_Dev_point ,Mode=OneWay}" MarkerSize="3" MarkerType="Circle" MarkerFill="Red"/>
            </oxy:Plot.Series>
        </oxy:Plot>

        




        <oxy:Plot x:Name="plot2" Height="75" Width="450" Background="Transparent" PlotAreaBorderColor="Transparent" TextColor="Transparent" Canvas.Top="229" Canvas.Left="116">
            <oxy:Plot.Series>
                <oxy:LineSeries Color= "Transparent" ItemsSource="{Binding VM_SliderPoints ,Mode=OneWay}" MarkerSize="3" MarkerType="Circle" MarkerFill="Red"/>
                <oxy:LineSeries Color= "Transparent" ItemsSource="{Binding VM_SliderBorder ,Mode=OneWay}" MarkerSize="3" MarkerType="Circle" MarkerFill="Transparent"/>
            </oxy:Plot.Series>
        </oxy:Plot>

    </Canvas>
    <!--</Grid>-->
</UserControl>
